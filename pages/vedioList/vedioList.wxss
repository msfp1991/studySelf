/* pages/vedio/vedio.wxss */
.main video{
  width: 100%;
}
.main video .controls{
  width: 100%;
  height: 100%;
  opacity: 1;
}
.listItem .main-center{
    position: relative;
}
.main video .controls cover-image{
  width: 100%;
  height: 100%;
  opacity: 1;
}
.listItem{
  position: relative;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.listItem .mainImg{
  width: 100%;
}
.listItem .title{
  padding: 20rpx;
}
.listItem .playButton{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 10;
}